{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext",
    ],
    "module": "NodeNext",
    "rootDir": "./src/",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src/",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/"
  ],
}