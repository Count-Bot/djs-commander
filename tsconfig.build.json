{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "rootDir": "./src/",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src/",
    "sourceMap": true,
    "outDir": "./build/",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
